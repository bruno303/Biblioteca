
@{
    ViewData["Title"] = "Locação de Produtos";
}

@model LocacaoViewModel

<br />
<div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10">
        <a role="button" class="btn btn-outline-primary btn-block" href="/">Voltar</a>
        <br />
    </div>

    <div class="col-md-1"></div>
</div>
<div class="row">
    <div class="col-md-1"></div>

    <div class="col-md-10">
        <form method="post" action="/Locacao/Gravar/" role="form">
            @Html.AntiForgeryToken()
                <div class="form-group" hidden>
                    @Html.LabelFor(p => p.IdLocacao)
                    @Html.TextBoxFor(p => p.IdLocacao, new { @class = "form-control", @readonly = true })
                    <br />
                    @Html.ValidationMessageFor(p => p.IdLocacao, "", new { @class = "text-danger" }, "")
                </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.IdCliente)
                        @Html.DropDownListFor(p => p.IdCliente, new SelectList(Model.Clientes, "IdCliente", "Nome"), "SELECIONE", new { @class = "form-control" })
                        <br />
                        @Html.ValidationMessageFor(p => p.IdCliente, "", new { @class = "text-danger" }, "")
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.IdProduto)
                        @Html.DropDownListFor(p => p.IdProduto, new SelectList(Model.Produtos, "IdProduto", "Descricao"), "SELECIONE", new { @class = "form-control" })
                        <br />
                        @Html.ValidationMessageFor(p => p.IdProduto, "", new { @class = "text-danger" }, "")
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(p => p.DtDevolucao)
                        @Html.EditorFor(p => p.DtDevolucao, new { htmlAttributes = new { @class = "form-control" } })
                        <br />
                        @Html.ValidationMessageFor(p => p.DtDevolucao, "", new { @class = "text-danger" }, "")
                    </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
            <input type="submit" value="Confirmar" class="btn btn-primary" />
        </form>
    </div>

    <div class="col-md-1"></div>
</div>