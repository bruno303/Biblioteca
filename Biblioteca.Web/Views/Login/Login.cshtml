
@model LoginViewModel
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_LayoutPuro";
}

<br />
<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <form method="post" action="/Login/Login/" role="form">
            <div class="form-group">
                @Html.LabelFor(p => p.Usuario)
                @Html.TextBoxFor(p => p.Usuario, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Usuario, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Senha)
                @Html.PasswordFor(p => p.Senha, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Senha, "", new { @class = "text-danger" }, "")
            </div>

            @*<div class="form-group">
                @Html.CheckBoxFor(p => p.Lembrar)
                @Html.LabelFor(p => p.Lembrar)
            </div>*@

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />

            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>

    <div class="col-md-3"></div>
</div>