
@{
    ViewData["Title"] = "Cadastro de Tipos de Produto";
}
@model List<Biblioteca.Dominio.ProdutoTipo>

<h2 class="padding-cima-baixo">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <br />
        <a class="btn btn-secondary padding-cima-baixo" role="button" href="/Produto/EditarProdutoTipo/0">Adicionar</a>
        <br /><br />
        <table id="dtbDados" class="table padding-cima-baixo">
            <thead>
                <tr>
                    <th class="text-center">
                        ID
                    </th>
                    <th class="text-center">
                        Descrição
                    </th>
                    <th class="text-center">
                        Prazo
                    </th>
                    <th class="text-center">
                        Multa (p/dia)
                    </th>
                    <th class="text-center">
                        Ativo
                    </th>
                    <th class="text-center">
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.IdProdutoTipo
                        </td>
                        <td>
                            @item.Descricao
                        </td>
                        <td class="text-center">
                            @item.Prazo
                        </td>
                        <td class="text-center">
                            @item.VlMulta
                        </td>
                        <td class="text-center">
                            @(item.Ativo ? "SIM" : "NÃO")
                        </td>
                        <td>
                            <a href=@("/Produto/EditarProdutoTipo/" + item.IdProdutoTipo.ToString()) role="button" class="btn btn-success btn-sm">
                                <i class="glyphicon glyphicon-pencil"></i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>