
@{
    ViewData["Title"] = "Cadastro de Editoras";
}
@using X.PagedList;
@using X.PagedList.Mvc.Core;

<h2 class="padding-cima-baixo">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-secondary padding-cima-baixo" role="button" href="/Produto/EditarEditora/0">Adicionar</a>
        <table class="table padding-cima-baixo">
            <thead>
                <tr>
                    <th class="text-center">
                        ID
                    </th>
                    <th class="text-center">
                        Nome
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Dados)
                {
                    <tr>
                        <td class="text-center">
                            @item.IdEditora
                        </td>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            <a href=@("/Produto/EditarEditora/" + item.IdEditora.ToString()) role="button" class="btn btn-success btn-sm">
                                <i class="glyphicon glyphicon-pencil"></i> Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager((IPagedList)ViewBag.Dados, page => Url.Action("CadEditoras", new { page }))
    </div>
</div>