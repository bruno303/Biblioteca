@model ProdutoTipoViewModel
@{
    ViewData["Title"] = "Edição - Tipo de Produto";
}

<br />
<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <a role="button" class="btn btn-outline-primary btn-block" href="/Produto/CadProdutoTipo/">Voltar</a>
        <br />
        <form method="post" action="/Produto/EditarProdutoTipo/" role="form">
            @Html.AntiForgeryToken()
            <div class="form-group" hidden>
                @Html.LabelFor(p => p.IdProdutoTipo)
                @Html.TextBoxFor(p => p.IdProdutoTipo, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.IdProdutoTipo, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Descricao)
                @Html.TextBoxFor(p => p.Descricao, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Descricao, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Prazo)
                @Html.TextBoxFor(p => p.Prazo, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Prazo, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.VlMulta)
                @Html.EditorFor(p => p.VlMulta, new { htmlAttributes = new { @class = "form-control number", id="inpMulta" } })
                <br />
                @Html.ValidationMessageFor(p => p.VlMulta, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(p => p.Ativo)
                @Html.LabelFor(p => p.Ativo)
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
            <input type="submit" value="@(ViewBag.Adicionar ? "Adicionar" : "Alterar")" class="btn btn-primary" />
        </form>
    </div>

    <div class="col-md-3"></div>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#inpMulta").keydown(function (event) {
                console.log(event.which)
                if (event.which == 190) {
                    event.preventDefault()
                }
            })
        })
    </script>
}