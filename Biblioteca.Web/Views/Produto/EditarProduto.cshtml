@{
    ViewData["Title"] = "Edição - Produto";
}

@model ProdutoViewModel

<br />
<div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8">
        <a role="button" class="btn btn-outline-primary btn-block" href="/Produto/CadProduto/">Voltar</a>
        <br />

        <form method="post" action="/Produto/EditarProduto/" role="form">
            <div class="form-group" hidden>
                @Html.LabelFor(p => p.IdProduto)
                @Html.TextBoxFor(p => p.IdProduto, new { @class = "form-control", @readonly = true })
                <br />
                @Html.ValidationMessageFor(p => p.IdProduto, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Descricao)
                @Html.TextBoxFor(p => p.Descricao, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Descricao, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.IdProdutoTipo)
                @Html.DropDownListFor(p => p.IdProdutoTipo, new SelectList(Model.ProdutosTipo, "IdProdutoTipo", "Descricao"), "-- SELECIONE --", new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.IdProdutoTipo, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.IdAutor)
                @Html.DropDownListFor(p => p.IdAutor, new SelectList(Model.Autores, "IdAutor", "Nome"), "-- SELECIONE --", new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.IdAutor, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.IdEditora)
                @Html.DropDownListFor(p => p.IdEditora, new SelectList(Model.Editoras, "IdEditora", "Nome"), "-- SELECIONE --", new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.IdEditora, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Quantidade)
                @Html.TextBoxFor(p => p.Quantidade, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(p => p.Quantidade, "", new { @class = "text-danger" }, "")
            </div>

            <div class="form-group">
                @Html.CheckBoxFor(p => p.Ativo)
                @Html.LabelFor(p => p.Ativo)
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
            <input type="submit" value="@(ViewBag.Adicionar ? "Adicionar" : "Alterar")" class="btn btn-primary" />
        </form>
    </div>

    <div class="col-md-2"></div>
</div>



