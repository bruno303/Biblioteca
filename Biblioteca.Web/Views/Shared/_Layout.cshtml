<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Biblioteca</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap4.1.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap4.1.3/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-dark bg-dark navbar-fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarActions">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="/Home/Index">Biblioteca</a>

        <div class="collapse navbar-collapse" id="navbarActions">
            <ul class="nav navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/Locacao/Index">Locação</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarCadastros" data-toggle="dropdown">Cadastros</a>
                    <div class="dropdown-menu" aria-labelledby="navbarCadastros">
                        <a class="dropdown-item" href="/Produto/CadProduto">Produtos</a>
                        <a class="dropdown-item" href="/Produto/CadProdutoTipo">Tipos de Produtos</a>
                        <a class="dropdown-item" href="/Produto/CadEditora">Editoras</a>
                        <a class="dropdown-item" href="/Produto/CadAutor">Autores</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Biblioteca</p>
        </footer>
    </div>

    <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap4.1.3/dist/js/bootstrap.min.js"></script>
            <script src="~/lib/popper/popper.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap4.1.3/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/popper/popper.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
